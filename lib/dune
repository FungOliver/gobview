(library
  (name React)
  (public_name jsoo-react-esy)
  (wrapped false)
  (js_of_ocaml (javascript_files ReactJs.js ReactDOMJs.js))
  (libraries gen_js_api)
)

(rule
  (targets React.ml)
  (deps React.mli)
  (action 
    (run %{bin:gen_js_api} -o %{targets} %{deps})
  ))

(rule
  (targets ReactDOM.ml)
  (deps ReactDOM.mli)
  (action 
    (run %{bin:gen_js_api} -o %{targets} %{deps})
  ))

(rule
  (targets ReactEvent.ml)
  (deps ReactEvent.mli)
  (action 
    (run %{bin:gen_js_api} -o %{targets} %{deps})
  ))
